<h1><%= @list.name %></h1>
<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<div><%= link_to "Back to list", root_path, class: "btn btn-primary" %></div>
<%= link_to "Add a new movie", new_list_bookmark_path(@list) %>
<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="movie">
        <div class="card-body">
          <h4 class="card-text"><strong><%= bookmark.movie.title %></strong></h4>
          <p><%= bookmark.movie.overview %></p>
          <p><%= bookmark.movie.rating %></p>
          <p><%= bookmark.comment %></p>
          <%#= link_to "Delete this movie", bookmark_path, class: "btn btn-dark", %>
          <%# specidfier delete pour link_to %>
        </div>
    </div>
  <% end %>
</div>
